class matrix
{
private:
   double **a;
   int n, m;
public:
   // матрица без элементов
   matrix ()
   {
      a = 0;
      n = 0;
      m = 0;
   }
   
   matrix (int N, int M, bool E = 0) // матриця NxM, якщо E, то одинична, інакше нульва



   matrix add (matrix & a, matrix & b)  // додавання двох матриць



   matrix mul (matrix & a, double k)// перемножити матрицю на число



   matrix mul (matrix & a, matrix & b) // перемножити дві матриці 
 
 
 
   void swapRows (int index1, int index2)   // змінити місцями дві матриці
   
   
   matrix inverse (  Matrix & a, Matrix & b ) // обернена матриця



   matrix minus ( Matrix & a,  Matrix & b) // віднімання матриць
