using namespace std;
class Matrix
{
  private:
            int nstr,nstl;
            int **a;
    public:
            Matrix (int m,int n);  
            Matrix (int m,int n,int *b);       
            ~Matrix ();
            Matrix operator + (Matrix b);   // оператор додавання 
            Matrix operator * (Matrix b);   // оператор множення
            Matrix operator * (int c);
            Matrix operator = (Matrix b);   // оператор присвоєння 
            Matrix operator += (Matrix b);  // оператор додавання з писвоєнням 
            Matrix (const Matrix &T);
            Matrix inverse (  Matrix & a, Matrix & b );   // обернена матриця 
            Matrix determinant (int **a, unsigned int n) 
            void Print ();
            
};
